<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="#415288"
        android:padding="20dp"
>

        <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="80dp" android:id="@+id/imageView"
                app:srcCompat="@mipmap/ic_launcher_foreground" android:soundEffectsEnabled="false"
                android:contextClickable="false"/>


        <TextView
                android:text="LOGIN"
                android:layout_width="wrap_content"
                android:fontFamily="@font/coresans_bold"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                android:layout_height="wrap_content" android:id="@+id/login_txt"
                android:textColorHint="@color/black" android:textColor="@color/white" android:textSize="20sp"
                android:textDirection="inherit" android:textAllCaps="true" android:textIsSelectable="true"
                android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="60dp"/>
        <TextView
                android:text="Usuario:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/titulo_Usuario"
                android:textColor="@color/white" android:textSize="20dp"
                android:fontFamily="@font/coresans_medium"
                app:layout_constraintTop_toBottomOf="@+id/login_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:textDirection="firstStrongLtr"
                android:textStyle="bold" android:forceDarkAllowed="true" android:typeface="normal"
                android:textIsSelectable="true" tools:layout_editor_absoluteY="282dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColor="@color/black" android:textColorHighlight="@color/white"
                android:textColorHint="@color/black"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:fontFamily="@font/coresans_light"

                android:id="@+id/campo_nova_senha"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:hint="exemplo@email.com"
                app:layout_constraintTop_toBottomOf="@+id/titulo_Usuario" android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="Senha:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/titulo_Senha"
                android:textColor="@color/white" android:textSize="20dp"
                android:fontFamily="@font/coresans_medium"
                app:layout_constraintTop_toBottomOf="@+id/campo_nova_senha"
                android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:textStyle="bold" android:textIsSelectable="true"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="xxxxxx"
                android:fontFamily="@font/coresans_light"
                android:textColorHint="@color/black"
                android:background="@color/white"
                android:paddingStart="10dp"

                android:id="@+id/campo_confirmar_senha"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titulo_Senha" android:singleLine="true"
                android:textColor="@color/black" android:textColorHighlight="@color/white"
                android:textColorLink="@color/white" android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.15" android:backgroundTint="#FFFFFF"/>

        <Button
                android:text="Entrar"
                android:textAllCaps="false"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/btn_entrar"
                android:fontFamily="@font/coresans_bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:backgroundTint="#457FBB"

                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/campo_confirmar_senha" android:layout_marginTop="56dp"
                android:textColorHint="@color/white"
                app:layout_constraintHorizontal_bias="0.497" android:fallbackLineSpacing="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>
