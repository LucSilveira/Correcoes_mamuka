<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        tools:context=".PerfilActivity" android:background="#415288">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:id="@+id/backPerfil"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

            <ImageView
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/baseline_arrow_back_24"
            />

        </LinearLayout>

    </LinearLayout>


    <TextView
            android:text="Atualizar senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/perfil_mamuca"
            android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#E4DEDE" android:layout_marginTop="108dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="Nova senha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titulo_Usuario"
            android:textColor="@color/white" android:textSize="20dp"
            android:fontFamily="@font/coresans_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold" android:forceDarkAllowed="true" android:typeface="normal"
            android:textIsSelectable="true" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/perfil_mamuca" android:layout_marginTop="60dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="@color/black" android:textColorHighlight="@color/white"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:paddingStart="10dp"
            android:fontFamily="@font/coresans_light"

            android:id="@+id/campo_nova_senha"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="xxxxxx"
            app:layout_constraintTop_toBottomOf="@+id/titulo_Usuario" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="xxxxxx"
            android:fontFamily="@font/coresans_light"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:paddingStart="10dp"

            android:id="@+id/campo_confirmar_senha"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_Senha" android:singleLine="true"
            android:textColor="@color/black" android:textColorHighlight="@color/white"
            android:textColorLink="@color/white" android:layout_marginTop="4dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/trocar_foto" app:layout_constraintVertical_bias="0.066"
            app:layout_constraintHorizontal_bias="0.6"/>
    <TextView
            android:text="Confirmar senha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titulo_Senha"
            android:textColor="@color/white" android:textSize="20dp"
            android:fontFamily="@font/coresans_medium"
            app:layout_constraintTop_toBottomOf="@+id/campo_nova_senha"
            android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.02"
            android:textStyle="bold" android:textIsSelectable="true"/>
    <Button
            android:text="Trocar senha"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/trocar_foto"
            android:paddingHorizontal="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="68dp"
            android:layout_marginTop="32dp"
            android:textColor="#E4DEDE"
            android:fontFamily="@font/coresans_bold"
            app:iconSize="20dp"
            android:textColorHighlight="#686A6C"
            android:textSize="24sp"
            app:iconTint="#0457BB"
            android:textColorLink="#B52828"
            app:layout_constraintVertical_bias="0.587"
            android:backgroundTint="#457FBB"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

